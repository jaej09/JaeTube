header
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href=routes.home) 
            span.fab.fa-youtube.mr-2
            span VIDEO
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon

        #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.mr-auto.justify-content-center
                if !user
                    li.nav-item
                        a.nav-link(href=routes.join) Join
                    li.nav-item
                        a.nav-link(href=routes.login) Log In
                else    
                    li.nav-item
                        a.nav-link(href=`/videos${routes.upload}`) Upload
                    li.nav-item
                        a.nav-link(href=routes.userDetail(user.id)) Profile
                    li.nav-item
                        a.nav-link(href=routes.logout) Log Out
            form.form-inline.my-2.my-lg-0(action=routes.search, method="get")
                input.form-control.mr-sm-2(type='search', name="term", aria-label="Search")
                button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Submit
